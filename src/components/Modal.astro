---
import "../style/_modal.scss";
import Button from "../components/ui-components/Button.astro";
const { valueName, valueProject } = Astro.props;
---

<div id="modal-1" data-modal class="modal-fon hidden">
  <div class="modal-cart">
    <div class="modal-cart__fon">
      <div class="modal-cart__fon--icon">
        <span data-modal-closed
          ><svg
            width="24px"
            height="24px"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
            ><g data-name="Layer 2"
              ><g data-name="close"
                ><rect
                  width="24"
                  height="24"
                  transform="rotate(180 12 12)"
                  opacity="0"></rect><path
                  fill="#292F36"
                  d="M13.41 12l4.3-4.29a1 1 0 1 0-1.42-1.42L12 10.59l-4.29-4.3a1 1 0 0 0-1.42 1.42l4.3 4.29-4.3 4.29a1 1 0 0 0 0 1.42 1 1 0 0 0 1.42 0l4.29-4.3 4.29 4.3a1 1 0 0 0 1.42 0 1 1 0 0 0 0-1.42z"
                ></path>
              </g>
            </g>
          </svg>
        </span>
      </div>
      <!-- <div class="text-center text-orange-100 pb-2 text-xl">
        Модальное окно 1
      </div> -->
      <form
        action="telegram.php"
        method="POST"
        id="form-mod-1"
        name="form-newton-1"
      >
        <input type="hidden" name="project_name" value={valueName} />
        <input type="hidden" name="form_subject" value={valueProject} />
        <div class="text-form">
          <label for="name-mod-1">Имя</label>
        </div>
        <div>
          <input
            class="form-item"
            type="text"
            placeholder="Ваше имя"
            name="name"
            id="name-mod-1"
          />
        </div>
        <div class="text-form">
          <label for="phone-mod-1">Ваш телефон</label>
        </div>
        <div>
          <input
            class="form-item mask-tel"
            type="tel"
            placeholder="Введите номер телефона"
            name="phone"
            id="phone-mod-1"
          />
        </div>
        <div class="btn-form">
          <Button tape="submit">Отправить</Button>
        </div>
      </form>
    </div>
  </div>
</div>
<script>
  import "../script/phone-tel.js";
</script>
<style lang="scss"></style>
